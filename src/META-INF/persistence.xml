<persistence xmlns="http://java.sun.com/xml/ns/persistence"
        	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        	version="2.0">

        	<persistence-unit name="locacao">

		<!-- provedor/implementacao do JPA -->

		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<!-- entidade mapeada -->

		<class>br.com.gustavo.globalgames.domain.Cliente</class>
         <class>br.com.gustavo.globalgames.domain.Jogo</class>

		<properties>
 			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
 			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/locacaobd?useSSL=false"/>
 			<property name="javax.persistence.jdbc.user" value="root" />
 			<property name="javax.persistence.jdbc.password" value="1234" />

 			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
 			<property name="hibernate.show_sql" value="true" />
 			<property name="hibernate.format_sql" value="true" />
 			<property name="hibernate.hbm2ddl.auto" value="update" />
 		</properties>

	</persistence-unit>

        </persistence>